{
  "name": "Chrome Web Store Extension",
  "description": "Rules for Chrome extension development",
  "rules": [
    {
      "name": "Chrome Extension Structure",
      "description": "Ensure proper Chrome extension file structure",
      "pattern": "manifest.json should be in the root directory"
    },
    {
      "name": "Manifest Version",
      "description": "Use Manifest V3 for new extensions",
      "pattern": "manifest_version should be set to 3"
    },
    {
      "name": "Permission Best Practices",
      "description": "Request minimal permissions",
      "pattern": "Only request permissions that are absolutely necessary"
    },
    {
      "name": "Content Security Policy",
      "description": "Implement secure CSP",
      "pattern": "Avoid unsafe-eval and unsafe-inline in content_security_policy"
    },
    {
      "name": "Web Accessible Resources",
      "description": "Properly define web_accessible_resources",
      "pattern": "Specify resources with proper matching patterns"
    },
    {
      "name": "Background Scripts",
      "description": "Use service workers for background processes",
      "pattern": "Use service_worker instead of background scripts in Manifest V3"
    },
    {
      "name": "Icon Requirements",
      "description": "Include all required icon sizes",
      "pattern": "Provide icons in 16x16, 32x32, 48x48, and 128x128 sizes"
    },
    {
      "name": "Localization",
      "description": "Implement proper i18n",
      "pattern": "Use _locales directory for internationalization"
    },
    {
      "name": "Chrome API Usage",
      "description": "Use Chrome APIs correctly",
      "pattern": "Follow Chrome API documentation and best practices"
    },
    {
      "name": "Store Listing",
      "description": "Prepare quality store listing materials",
      "pattern": "Create compelling screenshots, descriptions, and promotional images"
    }
  ],
  "filePatterns": {
    "include": [
      "manifest.json",
      "*.js",
      "*.html",
      "*.css",
      "_locales/**/*.json"
    ],
    "exclude": [
      "node_modules/**",
      "dist/**",
      "build/**"
    ]
  },
  "lintRules": {
    "noConsole": "warning",
    "useStrict": "error",
    "noEval": "error"
  }
}
