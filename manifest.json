{
    "manifest_version": 3,
    "name": "Chess.com Skin Changer",
    "version": "1.0.1",
    "description": "체스닷컴 스킨을 사용자 지정 디자인으로 변경합니다.",
    "permissions": ["declarativeNetRequest", "storage", "tabs"],
    "host_permissions": ["https://*.chess.com/*", "https://images.chesscomfiles.com/*"],
    "web_accessible_resources": [
        {
            "resources": ["images/*", "skins/*"],
            "matches": ["https://*.chess.com/*", "https://images.chesscomfiles.com/*"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}
